<head>
    <title>GEM LABO PHYSIQUE</title>    
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate"/>
    <meta http-equiv="Pragma" content="no-cache"/>
    <meta http-equiv="Expires" content="0"/>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" type="image/x-icon" href="./styles/images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="./styles/main.css" as="main">
</head>
<body>
    <div id="page-wrapper">
        <div class="horizontal gray">
            <div class="dropdown">
                <button class="dropbtn">Profil</button>
                <div class="dropdown-content">
                    <a href="/logout">Déconnexion</a>
                </div>
            </div>
        </div>
    </div>

    <div id="header">
        <h1>Bienvenue !</h1>
    </div>

    <div>
        <ul class="secondary-nav horizontal gray">
            <li><a href="/private/tools" class="nav-link">Matériels disponibles</a></li>
            <li><a href="#" class="nav-link">Matériels déjà empruntés</a></li>
            <li><a href="#" class="nav-link">Ajouter un matériel</a></li>
        </ul>
    </div>

    <div class="table available">
        <table>
            <thead>
                <tr>
                    <th>{{column1}}</th>
                    <th>{{column2}}</th>
                    <th>{{column3}}</th>
                    <th>{{column4}}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each table}}
                    <tr>
                        <td>{{this.idISEP}}</td>
                        <td>{{this.brand}}</td>
                        <td>{{this.model}}</td>
                        <td>{{this.desc}}</td>
                        <td><a href="/private/tools/{{this.idISEP}}">Emprunter</a></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <p>Total : {{table.size}}</p>
    </div>
</body>